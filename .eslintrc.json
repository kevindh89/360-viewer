{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }],
        "indent": ["error", 4],
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "max-len": ["error", 150],
        "no-undef": "off",
        "no-underscore-dangle": "off",
        "prefer-rest-params": "off"
    }
}