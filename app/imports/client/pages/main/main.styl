/* CSS declarations go here */
html {
  width: 100%;
}

body {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  text-align: center;
  margin-top: 10px;
  font-family: 'Open Sans', Tahoma, sans-serif !important;
}

div#footer {
  display: block;
  background: #000000;
  width: 100%;
  height: 25px;
  color: white;
  font-size: 12px;
  position: absolute;
  bottom: 0;
  opacity: 0.7;
  line-height: 25px;

  a {
    color: indianred;
  }
}

button.a-enter-vr-button {
  bottom: 20px;
}

button.client-logo {
  border: 0;
  bottom: 40px;
  cursor: pointer;
  left: 10px;
  min-width: 50px;
  min-height: 30px;
  padding-right: 5%;
  padding-top: 4%;
  position: absolute;
  z-index: 9999;
}
